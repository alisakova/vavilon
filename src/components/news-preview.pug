mixin news-preview(item, index)
  a(href='news-page.html').news-preview
    .news-preview__img
      if kkt 
        img(src="img/kkt/" + item.img, alt= item.title)
      else 
        img(src="img/news/news-" + index + ".jpg", alt= item.title)
      if !kkt
        .news-badge(class= item.disabled ? "news-badge_disabled" : "")
          if item.disabled
            if item.endText
              span= item.endText
            else
              | Закончилась
          else 
            | Закончится 20 ноября 2018
    .news-preview__title(class= kkt ? "news-preview__title_font-size-14" : "")= item.title
    .news-preview__date= item.date
    if !kkt
      .news-preview__footer
        if item.links
          a(href="").news-preview__link= item.links
        else 
          a(href="").news-preview__link Акции
          a(href="").news-preview__link Новости  
  
