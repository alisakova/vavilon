-
  var categories = [
    {
      "link": "vending-machines.html",
      "text": "Торговые автоматы"
    },
    {
      "link": "coffee-and-ingredients.html",
      "text": "Кофе и ингредиенты"
    },
    {
      "link": "snacks.html",
      "text": "Снеки"
    }
  ]
section.categories
  .container
    .categories__list
      each item, index in categories
        a(href= item.link).categories__item
          .categories__img
            img(src="img/categories/category-" + index + ".svg", alt= item.text)
          .categories__link= item.text
      
